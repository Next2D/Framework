    "eslint": "^8.36.0",
    "eslint-webpack-plugin": "^3.2.0",
    "jsdoc": "^4.0.2",
    "webpack": "^5.76.1",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.12.0"
  }
